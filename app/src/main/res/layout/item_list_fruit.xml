<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/yellow"
    app:cardCornerRadius="24dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_fruit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            android:text="Fruits Name"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_fruit_scientific_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="0dp"
            android:text="Fruit's scientific name"
            android:fontFamily="@font/roboto"
            android:textStyle="italic"
            android:textSize="16dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_fruit_name"/>

        <ImageView
            android:id="@+id/iv_fruit_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/img_pineapple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="32dp" />

        <TextView
            android:id="@+id/tv_fruit_region"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingVertical="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:text="America"
            android:textAlignment="center"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textColor="@color/light_grey"
            android:background="@drawable/list_region_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_fruit_scientific_name"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>